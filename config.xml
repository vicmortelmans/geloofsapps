<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "net.credomobiel"
        version   = "1.0.0">

    <!-- versionCode is optional and Android only -->

    <name>Credomobiel</name>

    <description>
        Mobiele apps, studiemateriaal en informatiebronnen voor de katholieke gelovige met een smartphone of tablet. 
    </description>

    <author href="http://www.credomobiel.net" email="vicmortelmans@gmail.com">
        Vic Mortelmans 
    </author>

    <preference name="android-installLocation" value="auto" />

    <icon src="favicon.png"/>
        
    <gap:splash src="img/city_social.png" />
        
    <gap:plugin name="com.borismus.webintent" />

    <preference name="stay-in-webview" value="true" />

    <access origin="http://127.0.0.1*"/>
    <access origin="http://credomobiel.net" subdomains="true" />
        
    <!-- If you do not want any permissions to be added to your app, add the
        following tag to your config.xml; you will still have the INTERNET
        permission on your app, which PhoneGap requires. -->
    <preference name="permissions" value="none"/>

    <feature name="InAppBrowser">
        <param name="android-package" value="org.apache.cordova.InAppBrowser"/>
    </feature>
        

</widget>

